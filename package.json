{
  "name": "belowjs-optimiser",
  "version": "2.0.2",
  "description": "Optimises photogrammetry GLB models for WebXR on Meta Quest headsets. Applies Draco mesh compression, KTX2 texture compression, and automatic polygon simplification.",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "bin": {
    "belowjs-optimiser": "./bin/cli.js",
    "below-optimiser": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "test": "node test/test-suite.js",
    "test:clean": "rm -rf test/output/*",
    "test:help": "node bin/cli.js --help",
    "release:check": "npm pack --dry-run --json"
  },
  "keywords": [
    "gltf",
    "glb",
    "webxr",
    "vr",
    "quest",
    "meta",
    "photogrammetry",
    "draco",
    "ktx2",
    "optimization",
    "compression"
  ],
  "author": "Patrick Morrison",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrick-morrison/belowjs-optimiser.git"
  },
  "bugs": {
    "url": "https://github.com/patrick-morrison/belowjs-optimiser/issues"
  },
  "homepage": "https://belowjs.com/guides/optimisation.html",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@gltf-transform/cli": "^4.1.0",
    "@gltf-transform/core": "^4.1.0",
    "@gltf-transform/extensions": "^4.1.0",
    "@gltf-transform/functions": "^4.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "draco3dgltf": "^1.5.7",
    "glob": "^11.0.0",
    "meshoptimizer": "^0.21.0",
    "ora": "^8.1.1",
    "sharp": "^0.33.0"
  }
}
